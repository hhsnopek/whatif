:stylus
  @import url(http://fonts.googleapis.com/css?family=Raleway:300)

  body
    background-color #232324
    font-family 'Raleway' sans-serif
    font-weight 300

  header, div, nav
    text-align center
    color red
    animation-duration 15s
    animation-name colorchange
    animation-iteration-count infinite
    animation-timing-function linear

  header
    font-size 24px
    margin-top 17%

  div
    margin-top 5%

  nav
    font-size 14px
    list-style none
    margin-top 13%

    li
      display inline
      margin-right 60px

      &:last-child
        margin-right 32px

      h4
        display inline-block

  @keyframes colorchange
    0, 100%
      color red
    25%
      color yellow
    50%
      color blue
    75%
      color green
