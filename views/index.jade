:stylus
  @import url(http://fonts.googleapis.com/css?family=Raleway:300)

  blue = #00A7F5
  red = #d61e1e
  charcoal = #232324

  body
    margin 0
    padding 0
    font-family 'Raleway' sans-serif
    font-weight 300
    background-color charcoal

  header, #headertwo, nav
    text-align center

  header
    color blue
    font-size 24px
    margin-top 15%

  #headertwo
    color red
    margin-top 5%

  nav
    font-size 14px
    list-style none
    margin-top 15%
    margin-bottom 10%

    li
      display inline
      margin-right 60px


      &:last-child
        margin-right 32px

      h4
        display inline-block
        background-color #333
        border-radius 5px
        padding-left 10px
        padding-right 10px
        padding-top 5px
        padding-bottom 5px

        &:hover
          background-color #454545

      a
        color blue
        text-decoration none

  #container
    background-color #fff
    width 100%
    border-top 3px red solid

    #content
      padding-bottom 5%
      max-width 800px
      padding-top 5%
      margin-left 20%
      margin-right 20%
    
    #about, #support, #contact
      padding-top 3%
      border-bottom 2px blue dashed

  @media screen(min-width 400px)
    nav li
      margin-right 20px
